{
    "compilerOptions": {
      "target": "es2019",
      "module": "es2020",
      "moduleResolution": "node",
      "lib": ["es2020", "DOM", "DOM.Iterable"],
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "inlineSources": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "experimentalDecorators": true
    },
    "include": ["src/**/*.ts"]
  }